<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlatziMusic" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/design_default_color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/design_default_color_secondary</item>
        <item name="colorSecondaryVariant">@color/design_default_color_secondary_variant</item>
        <item name="colorOnSecondary">@color/design_default_color_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="AppTheme.Red" parent="Theme.PlatziMusic">
        <item name="android:textColor">#FFFF0000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.Green" parent="Theme.PlatziMusic">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">#FFFF0000</item>
    </style>
    
    <style name="AppTheme.EditTextStyle" parent="Theme.PlatziMusic">
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">12dp</item>
    </style>
</resources>